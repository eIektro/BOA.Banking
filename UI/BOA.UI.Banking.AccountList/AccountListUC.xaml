<UserControl x:Class="BOA.UI.Banking.AccountList.AccountListUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BOA.UI.Banking.AccountList"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#D4BDDA">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="btnHesapEkle" Click="btnHesapEkle_Click" Content="Ekle" FontWeight="SemiBold" Foreground="Black" Width="80" Height="20" HorizontalAlignment="Left" Margin="10,0,0,0" Background="LightGreen" BorderBrush="#A370AF"></Button>
                <Button Click="btnHesapDetay_Click" x:Name="btnHesapDetay" Content="Detaylar" FontWeight="SemiBold" Foreground="Black" Width="80" Height="20" HorizontalAlignment="Left" Margin="30,0,0,0" Background="#D4BDDA" BorderBrush="#A370AF"></Button>
                <Button Click="btnHesapSil_Click" x:Name="btnHesapSil" Content="Sil" FontWeight="SemiBold" Foreground="Black" Width="80" Height="20" HorizontalAlignment="Left" Margin="30,0,0,0" Background="#FF0D0D" BorderBrush="#A60000"></Button>
            </StackPanel>

        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="gcFilter" Width="200"></ColumnDefinition>
                <ColumnDefinition x:Name="gcList"></ColumnDefinition>
            </Grid.ColumnDefinitions>


            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="63*"/>
                    <ColumnDefinition Width="137*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical" Grid.ColumnSpan="2" >
                    <Label Content="Filtreleme İşlemleri" HorizontalAlignment="Center" Background="AliceBlue" BorderBrush="Gray" Width="Auto" Margin="0,10,0,0"></Label>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Center">
                        <Button x:Name="btnFiltrele" Click="btnFiltrele_Click" Content="Filtrele" Height="20" Width="100"></Button>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,10,5,0" HorizontalAlignment="Right">
                        <Label Content="Id:" FontSize="11"></Label>
                        <TextBox x:Name="tbFilterbyId" Width="120" HorizontalAlignment="Center" PreviewTextInput="tbFilterbyId_PreviewTextInput"></TextBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,10,5,0" HorizontalAlignment="Right">
                        <Label Content="Şube Id:" FontSize="11"></Label>
                        <TextBox x:Name="tbFilterbyBranchId" Width="120" HorizontalAlignment="Center" PreviewTextInput="tbFilterbyBranchId_PreviewTextInput"></TextBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,10,5,0" HorizontalAlignment="Right">
                        <Label Content="Müşteri Id:" FontSize="11"></Label>
                        <TextBox x:Name="tbFilterbyCustomerId" Width="120" HorizontalAlignment="Center" PreviewTextInput="tbFilterbyCustomerId_PreviewTextInput"></TextBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,10,5,0" HorizontalAlignment="Right">
                        <Label Content="Bakiye" FontSize="11"></Label>
                        <TextBox x:Name="tbFilterbyBalance" Width="120" HorizontalAlignment="Center" PreviewTextInput="tbFilterbyBalance_PreviewTextInput"></TextBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,10,5,0" HorizontalAlignment="Right">
                        <Label Content="Döviz Cinsi:" FontSize="11"></Label>
                        <ComboBox x:Name="cbFilterbyCurrencyId" Width="120" HorizontalAlignment="Center"></ComboBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,10,5,0" HorizontalAlignment="Right">
                        <Label Content="Oluşturulma:" FontSize="11"></Label>
                        <DatePicker x:Name="dpFilterbyDateOfFormation" Width="120" HorizontalAlignment="Center"></DatePicker>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,10,5,0" HorizontalAlignment="Right">
                        <Label Content="IBAN:" FontSize="11"></Label>
                        <TextBox x:Name="tbFilterbyIban" Width="120" HorizontalAlignment="Center"></TextBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,10,5,0" HorizontalAlignment="Right">
                        <Label Content="Aktif:" FontSize="11"></Label>
                        <CheckBox x:Name="cbIsActive" Width="120" HorizontalAlignment="Center" Height="15"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,10,5,0" HorizontalAlignment="Right">
                        <Label Content="Oluşturan Id:" FontSize="11"></Label>
                        <TextBox x:Name="tbFilterbyFormedUserId" Width="120" HorizontalAlignment="Center" PreviewTextInput="tbFilterbyFormedUserId_PreviewTextInput"/>
                    </StackPanel>


                </StackPanel>
            </Grid>

            <DataGrid x:Name="dgAccountList" Grid.Column="1" SelectionChanged="dgAccountList_SelectionChanged" IsReadOnly="True" Height="440" DataContext="{Binding AccountContract}" ItemsSource="{Binding AccountContract}" AutoGenerateColumns="False" VerticalAlignment="Top" HorizontalAlignment="Stretch">

                <DataGrid.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="BorderThickness" Value="0,0,1,1"></Setter>
                        <Setter Property="BorderBrush" Value="#F2F2F2"></Setter>
                    </Style>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Height" Value="30"></Setter>
                        <Setter Property="FontSize" Value="13"></Setter>

                        <Setter Property="Background" Value="AliceBlue"></Setter>
                        <Setter Property="FontWeight" Value="SemiBold"></Setter>
                        <Setter Property="BorderBrush" Value="Black"></Setter>
                        <Setter Property="BorderThickness" Value="0,0,1,1"></Setter>

                    </Style>
                    <!--<Style TargetType="{x:Type DataGridTextColumn}">
                    <Setter Property="FontSize" Value="12"></Setter>
                    
                </Style>-->

                    <!-- Datagrid içeriğinin olduğu satırların borderlerı çok kaba duruyor. İlgilenilecek. -->

                </DataGrid.Resources>
                <DataGrid.RowStyle>
                    <Style TargetType="{x:Type DataGridRow}">
                        <Setter Property="FontSize" Value="14"></Setter>
                        <Setter Property="Background" Value="#FEFAFC"></Setter>


                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.Columns>

                    <DataGridTextColumn Header="  ID  " Binding="{Binding Id}"></DataGridTextColumn>
                    <DataGridTextColumn Header="  Şube  " Binding="{Binding BranchId}"></DataGridTextColumn>
                    <DataGridTextColumn Header="  Müşteri No  " Binding="{Binding CustomerId}"></DataGridTextColumn>
                    <DataGridTextColumn Header="  Ek No  " Binding="{Binding AdditionNo}"></DataGridTextColumn>
                    <DataGridTextColumn Header="  Döviz  " Binding="{Binding CurrencyId}"></DataGridTextColumn>
                    <DataGridTextColumn Header="  Bakiye  " Binding="{Binding Balance}"></DataGridTextColumn>
                    <DataGridTextColumn Header="  Oluşturulma  " Binding="{Binding DateOfFormation,StringFormat=\{0:dd.MM.yyyy\}}"></DataGridTextColumn>
                    <DataGridTextColumn Header="  IBAN  " Binding="{Binding IBAN}"></DataGridTextColumn>
                    <DataGridTextColumn Header="  Aktif  " Binding="{Binding IsActive}"></DataGridTextColumn>
                    <DataGridTextColumn Header="  Oluşturan  " Binding="{Binding FormedUserId}"></DataGridTextColumn>

                </DataGrid.Columns>
            </DataGrid>




        </Grid>
    </Grid>
</UserControl>
